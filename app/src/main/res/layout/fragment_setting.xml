<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/fragment_more_placeholder" />

            <include layout="@layout/fragment_more_placeholder" />

            <include layout="@layout/fragment_more_placeholder" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <RelativeLayout
        android:id="@+id/btn_reward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/set_border" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reward" />

        <TextView
            android:id="@+id/reward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_late_charge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/set_border" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Late Charge" />

        <TextView
            android:id="@+id/late_charge_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_max_charge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/set_border" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Charge" />

        <TextView
            android:id="@+id/max_charge_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_late_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/set_border" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Late Range (in Minute)" />

        <TextView
            android:id="@+id/late_range_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_check_in_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/set_border" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check-in Radius" />

        <TextView
            android:id="@+id/check_in_radius_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right" />

    </RelativeLayout>

</LinearLayout>